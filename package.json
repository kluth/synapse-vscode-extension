{
  "name": "synapse-vscode-extension",
  "displayName": "Synapse Framework Extension",
  "description": "Comprehensive VSCode extension for the Synapse Framework - bringing 3 billion years of neural system evolution to your IDE",
  "version": "0.0.1",
  "publisher": "synapse",
  "icon": "assets/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kluth/synapse-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/kluth/synapse-vscode-extension/issues"
  },
  "homepage": "https://github.com/kluth/synapse-vscode-extension#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "synapse",
    "neural",
    "framework",
    "neurons",
    "circuits",
    "distributed systems",
    "typescript",
    "microservices"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "workspaceContains:**/package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "synapse.helloWorld",
        "title": "Synapse: Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run clean && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run build -- --watch",
    "clean": "rm -rf out",
    "compile": "tsc -p ./",
    "compile:watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integration": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.0",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.4",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {}
}
